<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montseratte3"
                android:text="Название кнопки"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название"
                android:fontFamily="@font/montseratte3"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montseratte3"
                android:text="URL-адрес"
                android:textSize="16dp"
                android:layout_marginTop="9dp"/>

            <EditText
                android:id="@+id/url_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите URL-адрес"
                android:fontFamily="@font/montseratte3"
                android:inputType="text" />

            <TextView
                android:id="@+id/api_text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montseratte3"
                android:text="API-ключ"
                android:textSize="16dp"
                android:layout_marginTop="9dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/api_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите ключ"
                android:fontFamily="@font/montseratte3"
                android:inputType="text"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>